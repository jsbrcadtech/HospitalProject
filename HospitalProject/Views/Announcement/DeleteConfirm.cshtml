@model HospitalProject.Models.AnnouncementDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this Announcement?</h2>

<h2>@Model.Title</h2>
<div>Description: @Model.Description</div>
<div>PSA: @Model.IsPSA</div>
<div>URL: @Model.Url</div>
<div>Staff Name: @Model.Name</div>
<form action="/Announcement/Delete/@Model.Id" method="post">
    <input type="submit" value="Confirm Delete" />
</form>

<div>
    <a href="/Announcement/List">Cancel</a>
</div>
