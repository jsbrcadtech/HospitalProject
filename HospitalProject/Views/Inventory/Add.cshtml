
@{
    ViewBag.Title = "Add";
}

<p id="errMsg" class="text-center"></p>

<h2>Add</h2>

<form method="post" name="addInventory">
    <div class="form-group">
        <label class="control-label">Name</label>
        <input class="form-control" id="name" type="text" required />
    </div>
    <div class="form-group">
        <label class="control-label">Quantity</label>
        <input class="form-control" id="baseQuantity" type="number" required min="0" />
    </div>
    <button class="btn btn-primary" type="submit">Add</button>
</form>

@Scripts.Render("~/Scripts/Common/service.js")
@Scripts.Render("~/Scripts/Inventory/inventory-service.js")
@Scripts.Render("~/Scripts/Inventory/add.js")
