@{
    ViewBag.Title = "Show";
}

<p id="errMsg" class="text-center"></p>

<h2 id="name"></h2>

<div>
    <label>Quantity: </label>
    <span id="quantity"></span>
</div>

<div>
    @Html.ActionLink("Update Leadger", "UpdateLeadger", new { id = ViewBag.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default ml-2 " })
    <button class="btn btn-danger ml-2" id="btnDelete">Delete</button>
</div>

<h2>Inventory Leadger</h2>

<h3>Leadger filter</h3>

<form name="filter">
    <div class="form-group">
        <label class="control-label">Start Date</label>
        <input class="form-control" id="startDate" name="startDate" type="date" />
    </div>

    <div class="form-group">
        <label class="control-label">End Date</label>
        <input class="form-control" id="endDate" name="endDate" type="date" />
    </div>

    <button type="submit">Go</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Delta</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tBody">
    </tbody>
</table>

@Scripts.Render("~/Scripts/Common/service.js")
@Scripts.Render("~/Scripts/Inventory/inventory-service.js")
@Scripts.Render("~/Scripts/Inventory/show.js")
