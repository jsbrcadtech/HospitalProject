@model HospitalProject.Models.ViewModels.UpdateStaff

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="/Staff/update" method="POST">
    <input type="hidden" name="id" value="@Model.SelectedStaff.Id" />
    <div class="form-group">
        <div class="form-group">
            <div class="form-group">
                <label class="control-label">Name</label>
                <input class="form-control" type="text" name="name" value="@Model.SelectedStaff.Name" required />
            </div>

            <div class="form-group">
                <label class="control-label">Start Time:</label>
                <input class="form-control" type="time" name="StartTime" value="@Model.SelectedStaff.StartTime.ToString("HH:mm tt")" required />
            </div>

            <div class="form-group">
                <label class="control-label">End Time:</label>
                <input class="form-control" type="time" name="EndTime" value="@Model.SelectedStaff.EndTime.ToString("HH:mm tt")" required />
            </div>

            <label class="control-label">Specialization:</label>
            <select name="SpecializationId">
                    <option value="@Model.SelectedStaff.SpecializationId">@Model.SelectedStaff.Specialization.Name</option>
            </select>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>

</form>
