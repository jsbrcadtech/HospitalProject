@model IEnumerable<HospitalProject.Models.SpecializationsDto>


@{
    ViewBag.Title = "Create";
}

<h2>Add New Staff</h2>

<form action="/Staff/Create" method="POST">
    <div class="form-group">
        <label class="control-label">Name:</label>
        <input type="text" name="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label class="control-label">Start Time:</label>
        <input type="time" name="StartTime" class="form-control" required />
    </div>

    <div class="form-group">
        <label class="control-label">End Time:</label>
        <input type="time" name="EndTime" class="form-control" require />
    </div>

    <div class="form-group">
        <label class="control-label">Specialization:</label>
        <select name="SpecializationId">
            @foreach (var specializations in Model)
            {
                <option value="@specializations.Id">@specializations.Name</option>

            }
        </select>
    </div>

    <button class="btn btn-primary" type="submit" />Add</button>
</form>

<div>
    @Html.ActionLink("Back to List", "List")
</div>
