@model IEnumerable<HospitalProject.Models.Specialization>

@{
    ViewBag.Title = "Create";
}

<h2>Add New Staff</h2>

<form action="/Staff/Create" method="POST">
    <div class="field-container">
        <label>Name:</label>
        <input type="text" name="Name" class="" />
    </div>

    <div class="field-container">
        <label>Start Time:</label>
        <input type="text" name="StartTime" class="" />
    </div>

    <div class="field-container">
        <label>End Time:</label>
        <input type="text" name="EndTime" class="" />
    </div>

    <div>
        <label>Specialization:</label>
        <select name="SpecializationId">
            @foreach (var specializations in Model)
            {
                <option value="@specializations.Id">@specializations.Name</option>

            }
        </select>
    </div>

    <div><input type="submit" value="Add Staff" /></div>
</form>


